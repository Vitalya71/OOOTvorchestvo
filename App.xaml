<Application x:Class="OOOTvorchestvo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OOOTvorchestvo"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="SecondColor" Color="#76E383"></SolidColorBrush>
        <SolidColorBrush x:Key="AccentColor" Color="#498c51"></SolidColorBrush>
        <Style x:Key="TBStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
        </Style>
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
            <Setter Property="Width" Value="150"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Background" Value="#76E383"></Setter>
            
        </Style>
        <BitmapImage x:Key="NullImage" UriSource="Images\picture.png"></BitmapImage>
         
    </Application.Resources>
</Application>
